mixin pagination(options)
  -
    var componentClassName = 'pagination'
    componentClassName = options.className ? ' ' + options.className : ''
  div(class= componentClassName)
    .pagination__row
      .pagination__page-current 1
      .pagination__page 2
      .pagination__page 3
      .pagination__page ...
      .pagination__page 15
      .pagination__arrow
        svg(width='18' height='17' viewBox='0 0 18 17' fill='none' xmlns='http://www.w3.org/2000/svg')
          path(d='M9 0.426758L17.0156 8.44238L9 16.458L7.59375 15.0518L13.1719 9.42676H0.984375V7.45801H13.1719L7.59375 1.83301L9 0.426758Z' fill='white')
    .pagination__description= options && options.description