mixin card-slider({className, isActive= false, images}= {})
  -
    var componentClassName = 'card-slider'
    componentClassName += className ? ' ' + className : ''
  div(class= componentClassName)
    if isActive
      .card-slider__arrow.card-slider__arrow_left
        svg(width='8' height='13' viewBox='0 0 8 13' fill='none' xmlns='http://www.w3.org/2000/svg')
          path(d='M7.42188 11.0928L6.01563 12.499L0.0156253 6.49902L6.01563 0.499024L7.42188 1.90527L2.82813 6.49902L7.42188 11.0928Z' fill='white')
      .card-slider__arrow.card-slider__arrow_right   
        svg(width='8' height='13' viewBox='0 0 8 13' fill='none' xmlns='http://www.w3.org/2000/svg')
          path(d='M0.578125 1.90527L1.98438 0.499024L7.98438 6.49902L1.98438 12.499L0.578125 11.0928L5.17188 6.49902L0.578125 1.90527Z' fill='white')
    .card-slider__wrapper
      each image in images
        div= '*'
    each image in images
        .card-slider__img(alt=image.alt  style=`background-image: url(${image.src});`)
    