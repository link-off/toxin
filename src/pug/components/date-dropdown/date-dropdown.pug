include ../calendar/calendar

mixin date-dropdown({className, isOpen= false, placeholder}= {})
  -
    var componentClassName = 'date-dropdown'
    componentClassName += isOpen ? ` ${componentClassName}` + '_open': ''
    componentClassName += className ? ` ${className}` : ''
  div(class= componentClassName)
    .date-dropdown__wrapper
      .date-dropdown__trigger
        .date-dropdown__placeholder= placeholder
        .date-dropdown__arrow 
          svg(width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg')
            path(d='M10.5938 0.578125L12 1.98438L6 7.98438L0 1.98438L1.40625 0.578125L6 5.17188L10.5938 0.578125Z' fill='#1F2041')
      .date-dropdown__block
        +calendar({})