mixin footer({isMobile= false}= {})
  -
    var componentClassName = isMobile ? 'footer footer_mobile' : 'footer'
  div(class = componentClassName)
    .footer__logo
      +logo()
      .footer__text=  'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»'
    .footer__nav
      .footer__navigation
        .footer__colomn-title(class=  'margin-b-20')= 'Навигация'
        a(href='#').footer__colomn-item= 'О нас'
        a(href='#').footer__colomn-item= 'Новости'
        a(href='#').footer__colomn-item= 'Служба поддержки'
        a(href='#').footer__colomn-item= 'Услуги'
      .footer__about
        .footer__colomn-title(class=  'margin-b-20')= 'О нас'
        a(href='#').footer__colomn-item= 'О сервисе'
        a(href='#').footer__colomn-item= 'Наша команда'
        a(href='#').footer__colomn-item= 'Вакансии'
        a(href='#').footer__colomn-item= 'Инвесторы'
      .footer__support
        .footer__colomn-title(class=  'margin-b-20')= 'Служба поддержки'
        a(href='#').footer__colomn-item= 'Соглашения'
        a(href='#').footer__colomn-item= 'Сообщества'
        a(href='#').footer__colomn-item= 'Связь с ними'
      .footer__subscribtion 
        .footer__colomn-title(class=  'margin-b-20')= 'Подписка'
        .footer__column-text(class=  'margin-b-20')= 'Получайте специальные предложения и новости сервиса'
        +subscription-text-field({placeholder: 'Email', isHover: ''})


