mixin toggle(options)
  label.toggle
    .toggle__name= options.value.name
    input.toggle__input(type='checkbox' name=options.value.id checked=options.value.isChecked)
    span.toggle__togglemark
      svg.toggle__enabled(width='12' height='12' viewBox='0 0 12 12' fill='none' xmlns='http://www.w3.org/2000/svg')
        rect(width='12' height='12' rx='6' fill='url(#radio_svg)')
      svg.toggle__disabled(width='12' height='13' viewBox='0 0 12 13' fill='none' xmlns='http://www.w3.org/2000/svg')
        rect(y='0.557617' width='12' height='12' rx='6' fill='#1F2041' fill-opacity='0.25')
  