extends ../../components/layout-guide/layout-guide

include ../../components/logo/logo
include ../../components/forms/search-room/search-room
include ../../components/forms/reservation/reservation
include ../../components/forms/registration/registration
include ../../components/forms/authorization/authorization
include ../../components/card/card
include ../../components/field-wrapper/field-wrapper
include ../../components/group-wrapper/group-wrapper
include ../../components/dropdown/dropdown
include ../../components/text-field/text-field
include ../../components/radio/radio
include ../../components/masked-text-field/masked-text-field
include ../../components/toggle/toggle
include ../../components/rate/rate
include ../../components/date-dropdown/date-dropdown
include ../../components/calendar/calendar
include ../../components/button/button

block variables
  - var title = 'Cards';
  - var description = 'Authoriazation forms, calendar, hotel room cards';
  - var pageClass = 'guide-cards';
  - var registrationRadio = pageClass + '_offset-registration-radio'
  - var pageLogoClass = 'guide-common__logo'

block content
  .margin-t-30
    +logo({isGrey: true, className: pageLogoClass})
  div(class = `${pageClass}__container margin-t-30`)
    div
      +search-room({className: 'margin-b-40'})
      +registration()
    div
      +reservation({className: 'margin-b-40', price: '9 900', discount: '2 179', fee: 0, additionalServices: 300})
      +authorization()
    div
      +calendar({className: 'margin-b-40'})
      +card({feedback: '145', images: [
        {alt: 'hotel room', src: '../../../assets/img/room888.jpg'},
        {alt: 'hotel room', src: '../../../assets/img/room888.jpg'},
        {alt: 'hotel room', src: '../../../assets/img/room888.jpg'},
        {alt: 'hotel room', src: '../../../assets/img/room888.jpg'}
      ]})