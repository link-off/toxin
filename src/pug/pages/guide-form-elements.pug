extends ../components/layout-guide

include ../components/logo
include ../components/field-wrapper
include ../components/form/group-wrapper
include ../components/form/text-field
include ../components/form/dropdown
include ../components/form/masked-text-field
include ../components/form/subscription-text-field
include ../components/form/date-dropdown
include ../components/form/filter-date-dropdown
include ../components/form/checkbox
include ../components/form/radio
include ../components/form/toggle
include ../components/form/like
include ../components/form/rate
include ../components/form/expandable-checkbox-list
include ../components/form/advantages-block
include ../components/form/range-slider
include ../components/form/button
include ../components/form/pagination
include ../components/form/bullet-list
include ../components/form/comment


block variables
  - var title = 'Form Elements';
  - var description = 'Forms, checkbox, radio, etc components';
  - var pageClass = 'guide-form-elements';
  - var pageLogoClass = 'guide-common__logo'

block content
  .margin-t-20-half
    +logo({isGrey: true, className: pageLogoClass})
  section(class= `${pageClass}__container`)
    div
      +field-wrapper({
        title: 'text field', 
        description: 'default'})
        +text-field({
          placeholder: 'email'})
      +field-wrapper({
        title: 'text field', 
        description: 'hover / focus', 
        className: 'margin-t-20'})
        +text-field({
          isHover: true, 
          placeholder: 'email', 
          value: 'This is pretty awesome'})
      +field-wrapper({title: 'dropdown', description: '', className: 'margin-t-20'})
        +dropdown({
          isOpen: false, 
          placeholder: 'Сколько гостей', 
          values: [
            {id: 1, name: 'взрослые', count: 2}, 
            {id: 2, name: 'дети', count: 1}, 
            {id: 3, name: 'младенцы', count: 0}]})  
      +field-wrapper({
        title: 'masked text field', 
        description: '', 
        className: `${pageClass}__offset-masked-text-field`})
        +masked-text-field({placeholder: 'дд.мм.гггг'})  
      +group-wrapper({className: 'margin-t-40'})
        +field-wrapper({title: 'date dropdown'})
          +date-dropdown({
            isOpen: false, 
            placeholder: 'дд.мм.гггг'})  
        +field-wrapper({title: 'date dropdown'})
          +date-dropdown({isOpen: false, placeholder: '19.08.2019'})  
      .margin-t-40(class=`${pageClass}__wrapper`)
        +field-wrapper({
          title: 'filter date dropdown', 
          description: ''})
          +filter-date-dropdown({
            isOpen: false, 
            placeholder: '19 авг - 23 авг',
            values: [
              {id: 1, name: 'спальни', count: 2}, 
              {id: 2, name: 'кровати', count: 1}, 
              {id: 3, name: 'вынные комнаты', count: 0}]})  
        +field-wrapper({
          title: 'subscription text field', 
          className: 'margin-t-40', 
          description: ''})
          +subscription-text-field({
            placeholder: 'Email'})
      div(class=`${pageClass}__wrapper margin-t-100`)
        +field-wrapper({
          title: 'dropdown', 
          description: 'default', 
          className: 'margin-t-20'})
          +dropdown({
            isOpen: false, 
            placeholder: '2 спальни, 2 кровати...', 
            values: [
              {id: 1, name: 'спальни', count: 2}, 
              {id: 2, name: 'кровати', count: 2}, 
              {id: 3, name: 'вынные комнаты', count: 0}]})            
        +field-wrapper({
          title: 'dropdown', 
          description: 'expanded', 
          className: 'margin-t-20'})
          +dropdown({
            isOpen: true, 
            isShowActions: false, 
            placeholder: '2 спальни,2 кровати...',
            values: [
              {id: 1, name: 'спальни', count: 2}, 
              {id: 2, name: 'кровати', count: 2}, 
              {id: 3, name: 'вынные комнаты', count: 0}]})    
        +expandable-checkbox-list({
          isOpen: false,
          name: 'expandable checkbox list',
          className: `${pageClass}__offset-expandale-checbox-list`,
          values: [
            {id: 'expandable_checkbox_list_0_1', name: 'завтрак', isChecked: false}, 
            {id: 'expandable_checkbox_list_0_2', name: 'письменный стол', isChecked: true}, 
            {id: 'expandable_checkbox_list_0_3', name: 'стул для кормления', isChecked: true}, 
            {id: 'expandable_checkbox_list_0_4', name: 'кроватка', isChecked: true},
            {id: 'expandable_checkbox_list_0_5', name: 'телевизор', isChecked: false},
            {id: 'expandable_checkbox_list_0_6', name: 'шампунь', isChecked: false}
            ]})         
        +expandable-checkbox-list({
          isOpen: true,
          name: 'expandable checkbox list',
          className: `${pageClass}__offset-expandale-checbox-list-open`,
          values: [
            {id: 'expandable_checkbox_list_1_1', name: 'завтрак', isChecked: false}, 
            {id: 'expandable_checkbox_list_1_2', name: 'письменный стол', isChecked: true}, 
            {id: 'expandable_checkbox_list_1_3', name: 'стул для кормления', isChecked: true}, 
            {id: 'expandable_checkbox_list_1_4', name: 'кроватка', isChecked: true},
            {id: 'expandable_checkbox_list_1_5', name: 'телевизор', isChecked: false},
            {id: 'expandable_checkbox_list_1_6', name: 'шампунь', isChecked: false}]})    

    div 
      +field-wrapper({className: `${pageClass}__offset-buttons ${pageClass}__checkbox-wrapper-class` , title: 'checkbox buttons'})
        +checkbox({id: 'checkbox_buttons_0_1', name: 'можно курить', isChecked: false})
        +checkbox({id: 'checkbox_buttons_0_2', name: 'можно с питомцами', isChecked: true})
        +checkbox({id: 'checkbox_buttons_0_3', name: 'можно пригласить гостей (до 10 человек)', isChecked: true})
      +field-wrapper({className: `${pageClass}__radio-wrapper`, title: 'radio buttons'})
        +group-wrapper({className: `${pageClass}__offset-radio`})
          +radio({value: {id: 'radio_buttons_0_1', name: 'мужчина', isChecked: true}})
          +radio({value: {id: 'radio_buttons_0_1', name: 'женщина', isChecked: false}})
      +field-wrapper({title: 'toggle'})
        div(class = `${pageClass}__offset-toggle`)
          +toggle({value: {id: 'toggle_buttons_0_1', name: 'получать спецпредложения', isChecked: true}})
          +toggle({value: {id: 'toggle_buttons_0_1', name: 'получать спецпредложения', isChecked: false}})  
      +field-wrapper({className: `${pageClass}__offset-like ${pageClass}__offset-buttons`, title: 'like button'})
        +like({isLiked: false, count: 2})
        +like({isLiked: true, count: 12})
      +field-wrapper({className: `${pageClass}__offset-buttons ${pageClass}__offset-wrapper  margin-t-40`, title: 'rate button'})   
        div(class = `${pageClass}__rate-buttons-wrapper`)
          +rate({count: 4})
          +rate({count: 5})
      +field-wrapper({className: `${pageClass}__offset-dropdown`, title: 'dropdown', description: ''})
        +dropdown({
          isOpen: true, 
          isShowActions: true,
          isClearable: false, 
          placeholder: 'Сколько гостей', 
          values: [
            {id: 1, name: 'взрослые', count: 0}, 
            {id: 2, name: 'дети', count: 0}, 
            {id: 3, name: 'младенцы', count: 0}]}) 
      +field-wrapper({className: `${pageClass}__offset-buttons ${pageClass}__offset-wrapper ${pageClass}__offset-rich-checbox-buttons`, title: 'rich checkbox buttons'})
        +checkbox({id: 'rich_checkbox_buttons_0_1', name: 'широкий коридор', isRich: true, isChecked: false, description: 'Ширина коридоров в номере не менее 91 см.'})
        +checkbox({id: 'rich_checkbox_buttons_0_2', name: 'помощник для инвалидов', isRich: true, isChecked: false, description: 'На 1 этаже вас встретит специалист и проводит до номера.'})

    div
      +range-slider({className: `${pageClass}__offset-range-slider`, name: 'range slider', value: '5 000Р - 10 000Р'})    
      +field-wrapper({className: `${pageClass}__offset-buttons ${pageClass}__buttons-wrapper`, title: 'buttons'})
        div(class = `${pageClass}__buttons-between`)   
          +button({value: 'click me', type: 'colored'})
          +button({value: 'click me', type: 'colored', isHover: true})
        div(class = `${pageClass}__offset-buttons-between-outline`) 
          +button({value: 'click me', type: 'outline'})
          +button({value: 'click me', type: 'outline', isHover: true})
        div(class = `${pageClass}__offset-buttons-between-default`)  
          +button({value: 'click me'})
          +button({value: 'click me', isHover: true})
        div 
          +button({value: 'перейти к оплате', type: 'arrowed'})  
      +field-wrapper({className: `${pageClass}__offset-pagination`, title: 'pagination'})    
        +pagination({description: '1 – 12 из 100+ вариантов аренды'})
      +field-wrapper({title: 'dropdown', description: '', className: 'margin-t-100'})
        +dropdown({
          isOpen: true, 
          isShowActions: true,
          isClearable: true, 
          placeholder: '3 гостя', 
          values: [
            {id: 1, name: 'взрослые', count: 2}, 
            {id: 2, name: 'дети', count: 1}, 
            {id: 3, name: 'младенцы', count: 0}]})
      +field-wrapper({className: `${pageClass}__offset-bullet-list`, title: 'bullet list'})
        +bullet-list({
          list: [
            'Нельзя с питомцами',
            'Без вечеринок и мероприятий',
            'Время прибытия — после 13:00, а выезд до 12:00'
          ]
        })
    +field-wrapper({className: `${pageClass}__offset-advanages`})
       +advantages-block({title: 'Комфорт', imgType: 'emotion', description: 'Шумопоглощающие стены'})
       +advantages-block({title: 'Удобство', imgType: 'location', description: 'Окно в каждой из спален'}) 
    div(class = `${pageClass}__offset-comment`)
      +comment({
        isLiked: true,
        name: 'Мурад Сарафанов', 
        date: '5 дней назад', 
        text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
        image: {alt: 'avatar', src: '../../../assets/img/avatar.png'}
        }) 